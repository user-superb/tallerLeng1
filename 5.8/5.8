#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
	int num = -1;
	
	FILE *file0; // Texto
	FILE *file1; // Binario
	
	file0 = fopen("numeros.txt", "w");
	file1 = fopen("numeros.dat", "w");
	
	scanf("%d", &num);
	while (num != -1) {
		while ((num > 9) || (num < -1))
			scanf("%d", &num);
		
		fprintf(file0, "%d", num);
		fwrite(&num, sizeof(int), 1, file1);
		
		scanf("%d", &num);
	}
	
	fclose(file0);
	fclose(file1);
	
	return 0;
}

